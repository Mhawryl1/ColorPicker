{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/std:c++20",
        "User32.lib",
        "Gdi32.lib",
        "Shell32.lib",
        "${workspaceFolder}\\src\\*.cpp",
        "/I${workspaceFolder}\\include",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}",
        "/link ${workspaceFolder}\\img\\*.res"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
